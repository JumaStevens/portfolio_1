						li.skills__item
							span(title='CSS3')
								include svg/css3.pug
						li.skills__item
							span(title='Javascript')
								include svg/javascript.pug
					ul.skills__list
						li.skills__item
							span(title='Pug(Jade)')
								include svg/pug.pug
						li.skills__item
							span(title='Sass')
								include svg/sass.pug
						li.skills__item
							span(title='Node.js')
								include svg/nodejs.pug
					ul.skills__list
						li.skills__item
							span(title='Gulp.js')
								include svg/gulpjs.pug
						li.skills__item
							span(title='Photoshop')
								include svg/photoshop.pug

