						li.skills__item
							span(title='HTML5')
								include svg/html5.pug
						li.skills__item
							span(title='CSS3')
								include svg/css3.pug
						li.skills__item
							span(title='Javascript')
								include svg/javascript.pug
					ul.skills__list
						li.skills__item
							span(title='Node.js')
